    <div class="panel-body">
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <label for="inputYear" class="col-sm-2 control-label">Year</label>
          <div class="col-sm-9">
            {{focus-input class="form-control" id="inputYear" placeholder="Enter year" value=year}}
          </div>
          {{#if errors.year}} <div class="col-sm-1 invalid" data-toggle="tooltip" {{bind-attr title="yearErrors"}}></div> {{/if}}
        </div>
        <div class="form-group">
          <label for="inputQuarter" class="col-sm-2 control-label">Quarter</label>
          <div class="col-sm-9">
            {{input class="form-control" id="inputQuarter" placeholder="Enter quarter between 1 and 4" value=quarter}}
          </div>
          {{#if errors.quarter}} <div class="col-sm-1 invalid" data-toggle="tooltip" {{bind-attr title="quarterErrors"}}></div> {{/if}}
        </div>
        {{#if isValid}} 
        <button type="submit" class="btn btn-primary" {{action "saveQuarter"}}>Save Quarter</button>
        {{else}}
        <button type="submit" class="btn btn-primary disabled">Save Quarter</button>
        {{/if}}
        <button type="button" class="btn" data-toggle="collapse" data-target="#collapseQuarter">Discard Changes</button>
        </form>
    </div>
